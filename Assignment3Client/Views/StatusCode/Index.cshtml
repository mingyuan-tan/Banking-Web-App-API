@model int

@{
    var statusCode = Model;
    var statusMessage = "";

    switch (statusCode)
    {
        case 400:
            statusMessage = "Bad request: The request could not be fulfilled due to bad syntax";
            break;
        case 403:
            statusMessage = "Forbidden";
            break;
        case 404:
            statusMessage = "Page not found";
            break;
        case 408:
            statusMessage = "The server timed out waiting for the request";
            break;
        default:
            statusMessage = "That's odd... something happened that we didn't expect";
            break;
    }
}

<div class="jumbotron">
    <h1>Error @Model</h1>
    <h3>@statusMessage</h3>
</div>