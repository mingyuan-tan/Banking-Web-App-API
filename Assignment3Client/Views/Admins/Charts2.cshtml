@{
    ViewData["Title"] = "Charts 2";
}

    <div class="card mb-3">
        <div class="card-header bg-warning text-dark">
            <i class="fa fa-thumbs-o-up" aria-hidden="true"></i>
            Chart 2 from @ViewBag.start to @ViewBag.end
        </div>
        <div class="card-body">
            <canvas id="chart2" class="chartjs-render-monitor" style="display: block"></canvas>
        </div>
    </div>

    <form>
        <div class="form-group">
            <input type="hidden" name="id" value=@ViewBag.id />
            <input type="hidden" name="start" value=@ViewBag.start />
            <input type="hidden" name="end" value=@ViewBag.end />
            <input type="submit" value="View Previous Chart" formaction="Charts" class="btn btn-primary" />
        </div>
        <div class="form-group">
            <input type="hidden" name="id" value=@ViewBag.id />
            <input type="hidden" name="start" value=@ViewBag.start />
            <input type="hidden" name="end" value=@ViewBag.end />
            <input type="submit" value="View Next Chart" formaction="Charts2" class="btn btn-primary" />
        </div>
    </form>


@section scripts
{
    <script src="~/js/Chart.js"></script>
    <script src="https://cdn.jsdelivr.net/gh/emn178/chartjs-plugin-labels/src/chartjs-plugin-labels.js"></script>

    <script>
        $(document).ready(setupChart2);

        function setupChart2()
        {
            var option2 =
            {
                type: "GET",
                url: "http://localhost:49528/api/Customers/getChart2Data/@ViewBag.id/@ViewBag.start/@ViewBag.end",
                contentType: "application/json;charset=utf-8",
                datatype: "json",
                success: chart_2,
                xhrFields: {
                    withCredentials: true
                }
            }

            $.ajax(option1);
        }

        function chart_2(data)
        {
            console.log(data);
            var x_data = data[0];
            var y_data = data[1];

            var ctx = document.getElementById('chart2').getContext('2d');
            var chart1 = new Chart(ctx,
                {
                    type: 'bar',
                    data:
                    {
                        labels: x_data,
                        datasets: [{
                            label: 'Number of Transactions',
                            data: y_data,
                            backgroundColor: [
                                'rgba(255, 99, 132, 0.2)',
                                'rgba(54, 162, 235, 0.2)',
                                'rgba(255, 206, 86, 0.2)',
                                'rgba(75, 192, 192, 0.2)'
                            ],
                            borderColor: [
                                'rgba(255, 99, 132, 1)',
                                'rgba(54, 162, 235, 1)',
                                'rgba(255, 206, 86, 1)',
                                'rgba(75, 192, 192, 1)'
                            ],
                            borderWidth: 1
                        }]
                    },
                    options: {
                        scales: {
                            yAxes: [{
                                ticks: {
                                    beginAtZero: true
                                }
                            }]
                        }
                    }
                }
            );
        }
    </script>
}
